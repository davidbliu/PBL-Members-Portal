<style>
.group-card{
	padding:20px;
	margin:10px;
	max-height:300px;
	overflow:auto;
	border: 1px solid rgba(0,0,0,0.1);

}
</style>
<h1 class = 'centered'>Your Groups</h1>
<div class = 'col-md-3'></div>

<div class = 'col-md-6'>
<% @groups.each do |group| %>
<div class = 'group-card'>
	<a href = '/groups/show/<%= group.id %>'>
		<div class = 'btn btn-default pull-right' data-id = '<%= group.id %>'>View Activity</div>
	</a>

	<% if myEmail == group.creator %>
	<div class = 'pull-right' style = 'clear:both'>
		<a href = '/groups/destroy/<%= group.id %>'>
			<div class = 'btn btn-danger'>Destroy Group</div>
		</a>

		<a href = '/groups/edit/<%= group.id %>'>
			<div class = 'btn btn-primary'>Edit Group</div>
		</a>
	</div>
	<% end %>
	<h3>
		Name: <%= group.name %>
	</h3>
	<div>
		Key: <%= group.key %>
	</div>
	<div>
		Creator: <%= group.creator %>
	</div>
	<div>
		Description: <%= group.description %>
	</div>
	<div>
		Members: <%= group.emails.join(', ') %>
	</div>
</div>
<% end %>
</div>

<div class = 'col-md-3'></div>
