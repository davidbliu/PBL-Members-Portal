<div>
	<h1>Broadcast to the entire club</h1>
	<textarea id = 'broadcast-text'></textarea>
</div>
<button class = 'send-btn'>Send</button>
<script type = 'text/javascript'>
$('.send-btn').click(function(){
	// alert($('#broadcast-text').val());
	// $('#broadcast-text').val('');
	$('.send-btn').replace_with('<p id="send-status">Sending</p>')
	$.ajax({
		url:'/pablo/broadcast',
		type:'post',
		data:{
			msg: $('#broadcast-text').val()
		},
		success:function(data){
			$('#broadcast-text').val('');
			$('#send-status').replace_with('<p>Sent!</p>')
		}
	});
})
</script>