<div class = 'post-meta'>
	<div><%= email_hash[post.author].name %></div>
	<div><%= post.view_permissions %> can view</div>
	<div>Semester: <%= post.semester ? post.semester : 'None' %></div>
	<div>
		<div>
			<%= link_to 'Edit Post', "/blog/edit?id=#{post.id}" %>
		</div>
		<% if current_member.is_officer? %>
			<div>
				<%= link_to 'Email Post', "/blog/email/#{post.id}" %>
			</div>
		<% end %>
		<div>
			<%= link_to 'Push Post', "/blog/push_post/#{post.id}" %>
		</div>
	</div>
</div>