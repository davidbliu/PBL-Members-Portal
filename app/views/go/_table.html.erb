
<%= javascript_include_tag 'go_table' %>

<table class = 'table table-condensed table-hover'>
	
	<tbody>
		<% golinks.each do |golink| %>
		<tr id = '<%= golink.id %>-tr' class = 'golink-row' data-id = '<%= golink.id %>'>
			<td>
				<input type = 'checkbox' id = '<%= golink.id %>-checkbox'  class = 'golink-checkbox' data-id = '<%= golink.id %>' >
				&nbsp;
				<img src = 'http://www.google.com/s2/favicons?domain=<%= golink.url %>'>
			</td>
			<td class = 'mute-info'>
				<a class = 'mute-info' href = '<%= golink.url %>' id = '<%= golink.id %>-key'>
					<%= golink.key %>
				</a>
			</td>
			<td id = '<%= golink.id %>-description'>
				<%= golink.description %>
			</td>
			
			<td class = 'right-td'>
				<div class = 'text-muted smalltext'><%= get_name(golink.member_email) %></div>
				<div class = 'text-muted smalltext' id = '<%= golink.id %>-group_string'>
					To: <%= group_string(golink.groups) %>
				</div>
				<div class = 'text-muted smalltext'>
					<%= golink.time_string %>
				</div>
			</td>
			<td>
				<img src = '<%= gravatar(golink.member_email) %>' class = 'gravatar-img'>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>



<div id = 'golink-info-outer' class = 'affix'>
	<div id = 'golink-info-container'></div>
</div>
