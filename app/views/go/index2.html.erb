
<style type = 'text/css'>

#top-row{
	margin-bottom:25px;
}

#group-create-div{
	position:fixed;
	top:100px;
	left:100px;
	width:300px;
	height:350px;
	background-color:white;
	border:1px solid rgba(0,0,0,0.1);
	z-index:5000;
	padding:20px;
	display:none;
}

</style>

<div id = 'group-create-div'>
	<%= render partial: 'create_group' %>
</div>

<%= render partial: 'black_film' %>

<%= render partial: 'permissions_edit', locals: {groups: @groups} %>


<div class = 'row centered' id = 'top-row'>
	<h1>PBL Links</h1>
	<div class = 'col-md-4'></div>
	<div class = 'col-md-4'>
		<input id = 'search-input' type = 'text' class = 'form-control' placeholder = 'Search PBL Links'></input>

		<div><%= will_paginate(@golinks) %></div>
		<div>
			<div class = 'btn btn-info' id = 'create-group-btn'>
				Create A Group
			</div>
			<a href = '/groups'>
				<div class = 'btn btn-primary' id = 'manage-group-btn'>
					Manage My Groups
				</div>
			</a>
		</div>
	</div>
	<div class = 'col-md-4'></div>
</div>

<%= render partial: 'table2', locals: {golinks: @golinks} %>

<%= javascript_include_tag 'go_table' %>

<script type = 'text/javascript'>


showingCreateGroup = false;
function activateGroupCreate(){
	$('#create-group-btn').click(function(){
		if(showingCreateGroup){
			$('#group-create-div').hide();
			$('#black-film').hide();
			showingCreateGroup = false;
		}
		else{
			$('#group-create-div').show();
			$('#black-film').show();
			showingCreateGroup = true;
		}
	});
	$('#create-group-cancel-btn').click(function(){
		$('#group-create-div').hide();
		$('#black-film').hide();
		showingCreateGroup = false;
	});
	// respond to submit
	$('#create-group-submit').click(function(){
		$.ajax({
			url: '/groups/create',
			type:'post',
			data:{
				key: $('#group-key-input').val(),
				emails: $('#group-emails-input').val()
			},
			success:function(data){
				// alert('successfully created group');
				location.reload();
			},
			error: function(data){
				alert(data.responseText);
			}
		})
	})
}
function activateSearch(){
	$('#search-input').keypress(function(e) {
	    if(e.which == 13) {
	    	searchTerm = $(this).val();
	    	window.location = '?q='+searchTerm;
	    }
	});
}
activateSearch();
activateGroupCreate();
</script>