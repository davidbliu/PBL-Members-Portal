
<style type = 'text/css'>
.show-card{
	padding:15px;
	padding-top:0px;
	margin:15px;
}
.groups-form{
	display:none;
}
.groups-toggle:hover{
	cursor:pointer;
	opacity:0.5;
}
.groups-edit{
	margin-top:0.5em;
	margin-bottom:0.5em;
}
</style>

<div class = 'show-card'>
	<div>
		Key
		<input type = 'text' class = 'form-control' placeholder = 'key' id = 'key-input' value = '<%= @golink.key %>'>
	</div>

	<div>
		URL
		<input type = 'text' class = 'form-control' placeholder = 'url' id = 'url-input' value = '<%= @golink.url %>'>
	</div>

	<div>
		Description
		<input type = 'text' class = 'form-control' placeholder = 'description' id = 'description-input' value = '<%= @golink.description %>'>
	</div>

	<div>
		Creator: <%= @golink.member_email %>
	</div>

	<div class = 'groups-edit' data-id = '<%= @golink.id %>'>
		<div class = 'groups-toggle'>
			Shared With: <%= @golink.group_string %>
		</div>
		<div class = 'groups-form'>
			<% @groups.each do |group| %>
			<div>
				<% if @golink.groups.include?(group) %>
					<input class = 'group-checkbox' type = 'checkbox' data-key = '<%= group.id %>' checked>
				<% else %>
					<input class = 'group-checkbox' type = 'checkbox' data-key = '<%= group.id %>'>
				<% end %>
				<%= link_to group.name, "/go?group_id=#{group.id}" %>
			</div>
			<% end %>
		</div>
	</div>
	<div class = 'btn btn-info' id = 'save-btn' onclick = 'saveGoLink(<%= @golink.id %>)'>Save</div>
	<div class = 'btn btn-danger' id = 'delete-btn' onclick='destroyGoLink(<%= @golink.id %>)'>Delete</div>
</div>

<script type = 'text/javascript'>

$('.groups-toggle').click(function(){
	$('.groups-form').each(function(){
		$(this).toggle();
	})
});


